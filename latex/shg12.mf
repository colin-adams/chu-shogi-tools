% Shogi font for modern sho, chu and tenjiku
% E.Werner, March 2000
%
font_identifier "Shogi";
font_size=10pt#;
font_coding_scheme:="Shogi full";

mode_setup;
em#:=8pt#; cap#:=12pt#;
thin#:=0.5pt#; thick#:=1.2pt#;
med#:=3.5/5pt#; hair#:=1/12pt#;
medserif#:=8/10pt#;
thickserif#:=1.1pt#;
xhook#:=1.75pt#;
yhook#:=0.75pt#;
serif_height#:=2.1/3pt#;
serif_length#:=2.1/3pt#;
hook_height#:=1.2pt#;


font_normal_space 8pt#;
font_normal_stretch 4pt#;
font_normal_shrink 1pt#;

input shogi_koma;
end.

